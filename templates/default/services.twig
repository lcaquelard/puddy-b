{% block body %}
<div id="content" class="{{ current_page }}">
    <h1>nos soirées en bus discothèques</h1>
    <div class="separator_red_h_line"></div>
    <h3>Nos formules vous proposent différentes offres classées par durées</h3>
    <div class="separator_red_h_line"></div>
    <div id="watches_row">
        <div data-id="1" class="watch"></div>
        <div data-id="2" class="watch"></div>
        <div data-id="3" class="watch"></div>
        <div data-id="4" class="watch"></div>
        <div class="clear">&nbsp;</div>
    </div>
    <div class="clear">&nbsp;</div>
    <a href="{{ path('karaoke') }}"><div id="arrow_down"></div></a>
</div>
{% endblock %}

